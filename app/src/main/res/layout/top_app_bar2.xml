<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:layout_gravity="fill_horizontal">

    <ImageButton
        android:id="@+id/start_image_top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/center_icon_top_app_bar"
        android:gravity="start"
        android:layout_gravity="start"
        android:background="@color/white"
        android:src="@drawable/ic_arrow_back_black_24dp"/>

    <TextView
        android:id="@+id/center_icon_top_app_bar"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:text="@string/clothing"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/end_image_top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="end"
        android:layout_toEndOf="@+id/center_icon_top_app_bar"
        android:gravity="end"
        android:background="@color/white"
        android:src="@drawable/ic_help_outline_grey_24dp"/>

</RelativeLayout>